def fn(x, n=20, y0=1):
    x = np.array(x, ndmin=1) # 保证至少是 1D 的 Array
    y = np.ones_like(x) * y0
    for i in range(n):
        y = np.sqrt(x+y)
    return y





fn(42)





def fn_track(x, n=20, y0=1):
    x = np.array(x, ndmin=1)
    n_arr = np.arange(n+1)
    y_arr = np.zeros((n+1, len(x)))
    y_arr[0] = y0 * np.ones_like(x)
    for i in range(n):
        y_arr[i+1] = np.sqrt(x + y_arr[i])
    return n_arr, y_arr

